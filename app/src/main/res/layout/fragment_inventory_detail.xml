<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#C0C0C0"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:      "
        android:id="@+id/txtDescription"
        android:textColor="#000000"
        android:textSize="24dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sku:    "
        android:id="@+id/txtSku"
        android:layout_below="@+id/txtDescription"
        android:layout_alignRight="@+id/txtDescription"
        android:layout_alignEnd="@+id/txtDescription"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price:    "
        android:id="@+id/txtPrice"
        android:layout_below="@+id/txtSku"
        android:layout_alignRight="@+id/txtDescription"
        android:layout_alignEnd="@+id/txtDescription"
        android:textColor="#000000"
        android:textSize="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity:    "
        android:id="@+id/txtQuantity"
        android:layout_below="@+id/txtPrice"
        android:layout_alignRight="@+id/txtDescription"
        android:layout_alignEnd="@+id/txtDescription"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescriptionDisplay"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/txtDescription"
        android:layout_alignBottom="@+id/txtDescription"
        android:layout_toRightOf="@+id/txtDescription"
        android:layout_toEndOf="@+id/txtDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSkuDisplay"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtDescription"
        android:layout_toRightOf="@+id/txtSku"
        android:layout_toEndOf="@+id/txtSku" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPriceDisplay"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/txtSku"
        android:layout_toRightOf="@+id/txtPrice"
        android:layout_toEndOf="@+id/txtPrice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuantityDisplay"
        android:layout_below="@+id/txtPrice"
        android:layout_toRightOf="@+id/txtQuantity"
        android:layout_toEndOf="@+id/txtQuantity"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjust Quantity: "
        android:id="@+id/txtAddQuantity"
        android:textColor="#000000"
        android:textSize="22dp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/txtQuantity"
        android:layout_alignRight="@+id/txtDescription"
        android:layout_alignEnd="@+id/txtDescription" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="3"
        android:id="@+id/edtTxtAdjustQuantity"
        android:layout_above="@+id/btnRemove"
        android:layout_toRightOf="@+id/txtAddQuantity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btnSubmit"
        android:layout_below="@+id/txtAddQuantity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/btnRemove"
        android:layout_alignTop="@+id/btnSubmit"
        android:layout_toRightOf="@+id/btnSubmit"
        android:layout_toEndOf="@+id/btnSubmit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Item"
        android:id="@+id/btnCancel"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnCreateItem"
        android:layout_toStartOf="@+id/btnCreateItem" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Item"
        android:id="@+id/btnCreateItem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Item"
        android:id="@+id/btnDeleteItem"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btnCancel"
        android:layout_toStartOf="@+id/btnCancel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category: "
        android:id="@+id/txtCategory"
        android:textSize="24dp"
        android:textColor="#000000"
        android:layout_below="@+id/txtQuantity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/edtTxtAdjustQuantity"
        android:layout_toStartOf="@+id/edtTxtAdjustQuantity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCategoryDisplay"
        android:layout_alignBottom="@+id/txtCategory"
        android:layout_toRightOf="@+id/txtCategory"
        android:layout_toEndOf="@+id/txtCategory"
        android:textSize="20dp"
        android:textColor="#000000" />

</RelativeLayout>